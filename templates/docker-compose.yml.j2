version: "3.7"

services:
  traefik:
    image: traefik:latest
    ports:
      - target: 8080
        published: 8080
        protocol: tcp
        mode: host
      - target: 80
        published: 80
        protocol: tcp
        mode: host
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/local/traefik/traefik.toml:/etc/traefik/traefik.toml
    networks:
      - traefik-net
    deploy:
      mode: global

networks:
  traefik-net:
    driver: overlay
    external: true
