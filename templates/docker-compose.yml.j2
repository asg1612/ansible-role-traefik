version: "3.7"

services:
  traefik:
    image: traefik:latest
    ports:
      - target: 8080
        published: 8080
        protocol: tcp
        mode: host
      - target: 80
        published: 80
        protocol: tcp
        mode: host
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/local/traefik/traefik.toml:/etc/traefik/traefik.toml
    networks:
      - traefik
    deploy:
      placement:
        constraints:
          - node.role == manager

networks:
  traefik:
    driver: overlay
    external: true
