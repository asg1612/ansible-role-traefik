[entryPoints]
  [entryPoints.http]
  address = ":80"

[entryPoints.traefik]
address = ":8080"


[api]

entryPoint = "traefik"
dashboard = true
debug = true

logLevel = "DEBUG"
[accessLog]

################################################################
# Docker configuration backend
################################################################

# Enable Docker configuration backend.
[docker]

endpoint = "unix:///var/run/docker.sock"
domain = "docker.localhost"
watch = true
exposedbydefault = true
usebindportip = true
swarmMode = true
network = "traefik"

{% if prometheus_metrics == true %}
# Metrics definition Prometheus
[metrics]
  [metrics.prometheus]
    entryPoint = "traefik"
    buckets = [0.1,0.3,1.2,5.0]
{% endif %}
